<h2>Your Shopping Cart</h2>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |key, value| %>
      <tr>
        <td><%= Product.find(key).name %></td>
        <td><%= item.quantity %> Ã—</td>
        <td><%= number_to_currency item.product.price %></td>
        <td><%= number_to_currency item.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Order Subtotal:  <%= number_to_currency @order.subtotal %></h3>
<h3>Order Tax <%= number_to_currency @order.sales_tax %></h3>
<h2>Order Grand Total <%= number_to_currency @order.grand_total %></h2>
<br>
<div style = 'display:inline-block;'>
  <%= form_tag order_complete_path do %>
    <div>
      <%= hidden_field_tag :order_id, @order.id %>
    </div>

    <script src="https://checkout.stripe.com/checkout.js"
    class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="Order #<%= @order.id %>"
    data-amount= "<%= (@order.grand_total.to_f.round(2) * 100) %>"></script>
  <% end %>
</div>
